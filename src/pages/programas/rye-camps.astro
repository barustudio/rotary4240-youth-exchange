---
import ProgramLayout from '../../layouts/ProgramLayout.astro';
import ProgramContent from '../../components/ProgramContent.astro';
import { programInfo } from '../../data/programas/rye-camps';
---

<ProgramLayout
  title={programInfo.title}
  age={programInfo.age}
  duration={programInfo.duration}
  programCode={programInfo.programCode}
  logo={programInfo.logo}
  applicationFormLink={programInfo.applicationFormLink}
>
  <ProgramContent
    description={programInfo.description}
    benefits={programInfo.benefits}
    experiences={programInfo.experiences}
    ageRequirements={programInfo.ageRequirements}
    profileRequirements={programInfo.profileRequirements}
    skills={programInfo.skills}
    familySupport={programInfo.familySupport}
    detailedDuration={programInfo.detailedDuration}
    phases={programInfo.phases}
    countryExamples={programInfo.countryExamples}
    costs={programInfo.costs}
    rotaryProvides={programInfo.rotaryProvides}
    applicationSteps={programInfo.applicationSteps}
    applicationFormLink={programInfo.applicationFormLink}
    importantDates={programInfo.importantDates}
    faqs={programInfo.faqs}
    testimonials={programInfo.testimonials}
    testimonialContent={programInfo.testimonialContent}
  />
</ProgramLayout>