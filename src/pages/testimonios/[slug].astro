---
import { getCollection, type CollectionEntry } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Postcard from '../../components/Postcard.astro';

export async function getStaticPaths() {
  const testimonials = await getCollection('testimonials');
  return testimonials.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

interface Props {
  entry: CollectionEntry<'testimonials'>;
}

const { entry } = Astro.props;
const { Content } = await entry.render();

const title = `Testimonio de ${entry.data.studentName} - Estudiante del programa ${entry.data.programCode}`;
const description = entry.data.quote.substring(0, 160);
---

<Layout metadata={{ title, description }}>
  <section class="py-12 md:py-20">
    <div class="container mx-auto px-4">
      <article class="max-w-3xl mx-auto">
        <!-- Render Postcard with frontmatter -->
        <div class="mb-8">
          <Postcard {...entry.data} />
        </div>

        <!-- Render Markdown content -->
        <div class="prose prose-lg dark:prose-invert mx-auto">
          <Content />
        </div>
      </article>
    </div>
  </section>
</Layout>
