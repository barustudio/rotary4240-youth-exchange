---
interface Props {
  description: string;
  benefits: Array<string>;
  experiences: Array<string>;
  ageRequirements: string;
  profileRequirements: Array<string>;
  skills: Array<string>;
  familySupport: string;
  detailedDuration: string;
  phases: Array<string>;
  countryExamples?: Array<{ country: string; details: string }>;
  costs: Array<string>;
  rotaryProvides: Array<string>;
  applicationSteps: Array<string>;
  applicationFormLink: string;
  importantDates?: Array<{ date: string; description: string }>;
  sponsorClubs?: Array<string>;
  faqs: Array<{ question: string; answer: string }>;
  testimonials?: Array<{ name: string; country: string; content: string; image?: string }>;
}

const {
  description,
  benefits,
  experiences,
  ageRequirements,
  profileRequirements,
  skills,
  familySupport,
  detailedDuration,
  phases,
  countryExamples = [],
  costs,
  rotaryProvides,
  applicationSteps,
  applicationFormLink,
  importantDates = [],
  sponsorClubs = [],
  faqs,
  testimonials = []
} = Astro.props;
---

<!-- 2. ¿Qué es este programa? -->
<section class="py-16">
  <div class="container-custom">
    <div class="grid md:grid-cols-2 gap-12">
      <div>
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-6">¿Qué es este programa?</h2>
        <p class="text-gray-600 dark:text-gray-300 mb-6">{description}</p>

        <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Beneficios para el participante</h3>
        <ul class="list-disc pl-6 text-gray-600 dark:text-gray-300 mb-6">
          {benefits.map(benefit => (
            <li>{benefit}</li>
          ))}
        </ul>

        <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Experiencias típicas</h3>
        <ul class="list-disc pl-6 text-gray-600 dark:text-gray-300">
          {experiences.map(experience => (
            <li>{experience}</li>
          ))}
        </ul>
      </div>
      <div class="rounded-xl overflow-hidden bg-gray-100 dark:bg-gray-800/50 h-80 flex items-center justify-center">
        <span class="text-gray-400">Imagen o video testimonial</span>
      </div>
    </div>
  </div>
</section>

<!-- 3. ¿Quién puede participar? -->
<section class="py-16 bg-gray-50 dark:bg-gray-800/30">
  <div class="container-custom">
    <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-8">¿Quién puede participar?</h2>

    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
      <div class="card p-6 border border-gray-200 dark:border-gray-700">
        <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Requisitos de edad</h3>
        <p class="text-gray-600 dark:text-gray-300">{ageRequirements}</p>
      </div>

      <div class="card p-6 border border-gray-200 dark:border-gray-700">
        <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Perfil ideal</h3>
        <ul class="list-disc pl-6 text-gray-600 dark:text-gray-300">
          {profileRequirements.map(requirement => (
            <li>{requirement}</li>
          ))}
        </ul>
      </div>

      <div class="card p-6 border border-gray-200 dark:border-gray-700">
        <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Habilidades deseadas</h3>
        <ul class="list-disc pl-6 text-gray-600 dark:text-gray-300">
          {skills.map(skill => (
            <li>{skill}</li>
          ))}
        </ul>
      </div>

      <div class="card p-6 border border-gray-200 dark:border-gray-700">
        <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Apoyo familiar</h3>
        <p class="text-gray-600 dark:text-gray-300">{familySupport}</p>
      </div>
    </div>
  </div>
</section>

<!-- 4. ¿Cuánto dura y cómo funciona? -->
<section class="py-16">
  <div class="container-custom">
    <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-8">¿Cuánto dura y cómo funciona?</h2>

    <div class="grid md:grid-cols-2 gap-12">
      <div>
        <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Duración detallada</h3>
        <p class="text-gray-600 dark:text-gray-300 mb-6">{detailedDuration}</p>

        <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Fases del intercambio</h3>
        <ul class="list-disc pl-6 text-gray-600 dark:text-gray-300">
          {phases.map(phase => (
            <li>{phase}</li>
          ))}
        </ul>
      </div>

      {countryExamples.length > 0 && (
        <div>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Ejemplos por país</h3>
          <div class="space-y-4">
            {countryExamples.map(example => (
              <div class="p-4 border border-gray-200 dark:border-gray-700 rounded-lg">
                <h4 class="font-medium text-gray-900 dark:text-white mb-2">{example.country}</h4>
                <p class="text-gray-600 dark:text-gray-300">{example.details}</p>
              </div>
            ))}
          </div>
        </div>
      )}
    </div>
  </div>
</section>

<!-- 5. ¿Cuáles son los costos? ¿Qué incluye Rotary? -->
<section class="py-16 bg-gray-50 dark:bg-gray-800/30">
  <div class="container-custom">
    <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-8">¿Cuáles son los costos? ¿Qué incluye Rotary?</h2>

    <div class="grid md:grid-cols-2 gap-12">
      <div>
        <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Costos para el participante</h3>
        <ul class="list-disc pl-6 text-gray-600 dark:text-gray-300">
          {costs.map(cost => (
            <li>{cost}</li>
          ))}
        </ul>
      </div>

      <div>
        <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Rotary proporciona</h3>
        <ul class="list-disc pl-6 text-gray-600 dark:text-gray-300">
          {rotaryProvides.map(item => (
            <li>{item}</li>
          ))}
        </ul>
        <p class="mt-4 text-sm text-gray-500 dark:text-gray-400 italic">* Puede variar según país de destino</p>
      </div>
    </div>
  </div>
</section>

<!-- 6. ¿Cómo aplicar? -->
<section class="py-16">
  <div class="container-custom">
    <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-8">¿Cómo aplicar?</h2>

    <div class="grid md:grid-cols-2 gap-12">
      <div>
        <ol class="list-decimal pl-6 text-gray-600 dark:text-gray-300 mb-6">
          {applicationSteps.map(step => (
            <li class="mb-3">{step}</li>
          ))}
        </ol>

        <a href={applicationFormLink} class="btn btn-primary mt-4">Formulario de interés</a>
      </div>

      <div>
        {importantDates.length > 0 && (
          <div class="mb-8">
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Fechas importantes</h3>
            <div class="space-y-3">
              {importantDates.map(date => (
                <div class="flex gap-4 text-gray-600 dark:text-gray-300">
                  <div class="font-medium">{date.date}</div>
                  <div>{date.description}</div>
                </div>
              ))}
            </div>
          </div>
        )}

        {sponsorClubs.length > 0 && (
          <div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-4">Clubes patrocinadores</h3>
            <ul class="list-disc pl-6 text-gray-600 dark:text-gray-300">
              {sponsorClubs.map(club => (
                <li>{club}</li>
              ))}
            </ul>
          </div>
        )}
      </div>
    </div>
  </div>
</section>

<!-- 7. Preguntas frecuentes -->
<section class="py-16 bg-gray-50 dark:bg-gray-800/30">
  <div class="container-custom">
    <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-8">Preguntas frecuentes</h2>

    <div class="space-y-4">
      {faqs.map((faq, index) => (
        <div class="border border-gray-200 dark:border-gray-700 rounded-lg overflow-hidden">
          <details>
            <summary class="flex justify-between items-center p-4 cursor-pointer bg-white dark:bg-gray-800 hover:bg-gray-50 dark:hover:bg-gray-700/50">
              <span class="font-medium text-gray-900 dark:text-white">{faq.question}</span>
              <svg class="w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path></svg>
            </summary>
            <div class="p-4 bg-gray-50 dark:bg-gray-800/50 text-gray-600 dark:text-gray-300 border-t border-gray-200 dark:border-gray-700">
              <p>{faq.answer}</p>
            </div>
          </details>
        </div>
      ))}
    </div>
  </div>
</section>

<!-- 8. Testimonios / Historias -->
{testimonials.length > 0 && (
  <section class="py-16">
    <div class="container-custom">
      <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-8">Testimonios</h2>

      <div class="grid md:grid-cols-2 gap-8">
        {testimonials.map(testimonial => (
          <div class="p-6 border border-gray-200 dark:border-gray-700 rounded-lg">
            <div class="flex items-center gap-4 mb-4">
              <div class="w-16 h-16 rounded-full bg-gray-200 dark:bg-gray-700 overflow-hidden">
                {testimonial.image ? (
                  <img src={testimonial.image} alt={testimonial.name} class="w-full h-full object-cover" />
                ) : (
                  <div class="w-full h-full flex items-center justify-center text-gray-400">
                    <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path></svg>
                  </div>
                )}
              </div>
              <div>
                <h3 class="font-medium text-gray-900 dark:text-white">{testimonial.name}</h3>
                <p class="text-gray-500 dark:text-gray-400">{testimonial.country}</p>
              </div>
            </div>
            <p class="text-gray-600 dark:text-gray-300">{testimonial.content}</p>
          </div>
        ))}
      </div>
    </div>
  </section>
)}