<section class="relative pt-32 pb-10 md:pt-40 overflow-hidden hero-section">
  <div class="container-custom relative z-10">
    <div class="grid md:grid-cols-2 gap-12 items-center">
      <!-- Text Content -->
      <div class="slide-up" transition:animate="slide">
        <h1 class="mb-6 text-secondary-900 dark:text-white leading-tight">
          Explora el mundo con <span class="text-secondary-500">Rotary</span>
        </h1>
        <p class="text-xl text-secondary-600 dark:text-secondary-300 mb-8 max-w-lg">
          Vive una experiencia transformadora con nuestros programas de intercambio internacional para jóvenes de Centroamérica.
        </p>
        <p class="text-lg text-secondary-600 dark:text-secondary-300 mb-8 max-w-lg">
          Rotary Distrito 4240 te conecta con el mundo a través de oportunidades únicas para estudiar, convivir y crecer.
        </p>
        <div class="flex flex-wrap gap-4">
          <a href="#programas" class="btn-primary">
            👩‍🎓 Quiero viajar!
          </a>
        </div>
      </div>

      <!-- Video Container -->
      <div class="fade-in" transition:animate="fade">
        <div class="relative rounded-lg overflow-hidden shadow-xl">
          <iframe
            id="rotaryVideo"
            class="w-full aspect-video"
            src="https://rotary.webdamdb.com/embedvid.php?embedAssetId=wg6nnTnVoqp81sCt&apm=0"
            frameborder="0"
            scrolling="no"
            allow="fullscreen"
            allowfullscreen
          ></iframe>
        </div>
      </div>
    </div>
  </div>
</section>
