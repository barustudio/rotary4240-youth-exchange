---
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import Layout from './Layout.astro';

interface Props {
  title: string;
  age: string;
  duration: string;
  programCode: string;
  icon: string;
}

const { title, age, duration, programCode, icon } = Astro.props;
---

<Layout title={title}>
  <Header />

  <main>
    <!-- 1. Hero del programa -->
    <section class="bg-gray-50 dark:bg-gray-800 py-20">
      <div class="container-custom">
        <div class="grid md:grid-cols-2 gap-12 items-center">
          <div>
            <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-4">{title}</h1>
            <div class="flex flex-wrap gap-4 my-6">
              <span class="badge bg-primary-100 dark:bg-primary-900/30 text-primary-600 dark:text-primary-400">
                Edad: {age} años
              </span>
              <span class="badge bg-primary-100 dark:bg-primary-900/30 text-primary-600 dark:text-primary-400">
                Duración: {duration}
              </span>
              <span class="badge bg-primary-100 dark:bg-primary-900/30 text-primary-600 dark:text-primary-400">
                [{programCode}]
              </span>
            </div>
            <a href="#aplicar" class="btn btn-primary mt-6">Quiero participar</a>
          </div>
          <div class="flex justify-center">
            <div class="w-48 h-48 rounded-full bg-primary-100 dark:bg-primary-900/30 flex items-center justify-center">
              <svg
                class="w-24 h-24 text-primary-600 dark:text-primary-400"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={icon}></path>
              </svg>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Contenido principal -->
    <slot />

    <!-- Call to Action Final -->
    <section id="aplicar" class="py-20 bg-primary-50 dark:bg-primary-900/10">
      <div class="container-custom text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-8">
          ¿Listo para vivir esta experiencia única con Rotary?
        </h2>
        <div class="flex flex-wrap gap-4 justify-center">
          <a href="/contacto" class="btn btn-primary">Aplicar ahora</a>
          <a href="/clubes" class="btn btn-outline-primary">Contactar un club</a>
          <a href="/#programas" class="btn btn-outline-secondary">Ver otros programas</a>
        </div>
      </div>
    </section>
  </main>

  <Footer />
</Layout>